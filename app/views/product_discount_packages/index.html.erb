<p id="notice"><%= notice %></p>

<h1>Product Discount Packages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Discount percentage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_discount_packages.each do |product_discount_package| %>
      <tr>
        <td><%= product_discount_package.name %></td>
        <td><%= product_discount_package.description %></td>
        <td><%= product_discount_package.discount_percentage %></td>
        <td><%= link_to 'Show', product_discount_package %></td>
        <td><%= link_to 'Edit', edit_product_discount_package_path(product_discount_package) %></td>
        <td><%= link_to 'Destroy', product_discount_package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

